---
import Header from "../components/Header.astro";
import Sidebar from "../components/Sidebar.astro";
import { EMAIL, NAME } from "../consts.ts";
import Intro from "../content/intro.astro";
import ChipsContainer from "../components/ChipsContainer.astro";
import {
  personalProjectsTechStack,
  softwareDevelopmentTechStack,
} from "../content/projects.ts";
---

<!doctype html>
<html>
  <Header title={NAME} />
  <body>
    <div class="content">
      <Sidebar selectedItem="home" />
      <nav class="main">
        <div class="index container">
          <main class="fold-content-container">
            <div class="fold-content">
              <Intro />
            </div>
            <a href=`mailto:${EMAIL}` class="button w-button">Contact</a>
          </main>
          <div class="projects-section">
            <!-- Software Development -->
            <a href="/software-development" class="projects-container">
              <div class="single-projects-category">
                <div class="projects-category-image-container">
                  <img
                    src="./assets/browser.svg"
                    loading="lazy"
                    alt=""
                    class="projects-category-image"
                  />
                </div>
              </div>
              <div class="single-projects-content">
                <h4>Software Development</h4>
                <div class="tech-tools-container">
                  <div class="mini-label-white gray-color">
                    Technologies &amp; tools
                  </div>
                  <ChipsContainer techStack={softwareDevelopmentTechStack} />
                </div>
              </div>
            </a>
            <!-- Personal Projects -->
            <a href="/personal-projects" class="projects-container">
              <div class="single-projects-category">
                <div class="projects-category-image-container devops-img">
                  <img
                    src="./assets/database.svg"
                    loading="lazy"
                    alt=""
                    class="projects-category-image"
                  />
                </div>
              </div>
              <div class="single-projects-content">
                <h4>Personal Projects</h4>
                <div class="tech-tools-container">
                  <div class="mini-label-white gray-color">
                    Technologies &amp; tools
                  </div>
                  <ChipsContainer techStack={personalProjectsTechStack} />
                </div>
              </div>
            </a>
          </div>
        </div>
      </nav>
    </div>

    <!--[if lte IE 9]><script src="//cdnjs.cloudflare.com/ajax/libs/placeholders/3.0.2/placeholders.min.js"></script><![endif]-->
  </body>
</html>
