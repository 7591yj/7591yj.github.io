---
import Header from "../components/Header.astro";
import Sidebar from "../components/Sidebar.astro";
import { NAME } from "../consts.ts";
import AboutContent from "../content/aboutContent.astro";
---

<!doctype html>
<html>
  <Header title=`About | ${NAME}` />
  <body>
    <div class="content">
      <Sidebar selectedItem="about" />
      <nav class="main">
        <div class="container">
          <div class="back-nav-container">
            <a href="/" class="back-nav-button w-inline-block"
              ><img
                src="/assets/back.svg"
                loading="lazy"
                alt=""
                class="back-nav-img"
              />
              <div>Back</div>
            </a>
          </div>
          <div class="content-container">
            <h1>About Me</h1>
            <section class="items-container">
              <div class="resouce-items">
                <div class="resource-item">
                  <div class="resource-item-description">
                    <AboutContent />
                  </div>
                </div>
              </div>
            </section>
          </div>
        </div>
      </nav>
    </div>

    <!--[if lte IE 9]>
<script src="//cdnjs.cloudflare.com/ajax/libs/placeholders/3.0.2/placeholders.min.js"></script><![endif]-->
  </body>
</html>
