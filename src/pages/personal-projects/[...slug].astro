---
import Header from "../../components/Header.astro";
import Sidebar from "../../components/Sidebar.astro";

import { type CollectionEntry, getCollection, render } from "astro:content";
import PersonalProjectsPost from "../../layouts/PersonalProjectsPost.astro";
import { NAME } from "../../consts.ts";

export async function getStaticPaths() {
  const posts = await getCollection("personalProjects");
  return posts.map((post) => ({
    params: { slug: post.id },
    props: post,
  }));
}
type Props = CollectionEntry<"personalProjects">;

const post = Astro.props;
const { Content } = await render(post);
---

<!doctype html>
<html>
  <Header title=`Personal Projects | ${NAME}` />
  <body>
    <div class="content">
      <Sidebar selectedItem="personal-projects" />
      <nav class="main">
        <div class="container">
          <div class="back-nav-container">
            <a href="/personal-projects" class="back-nav-button w-inline-block"
              ><img
                src="/assets/back.svg"
                loading="lazy"
                alt=""
                class="back-nav-img"
              />
              <div>Back</div></a
            >
          </div>
          <PersonalProjectsPost {...post.data}>
            <Content />
          </PersonalProjectsPost>
        </div>
      </nav>
    </div>
    <!--[if lte IE 9]>
<script src="//cdnjs.cloudflare.com/ajax/libs/placeholders/3.0.2/placeholders.min.js"></script><![endif]-->
  </body>
</html>
