---
import Header from "../../components/Header.astro";
import Project from "../../components/Project.astro";
import Sidebar from "../../components/Sidebar.astro";
import { NAME } from "../../consts.ts";
import { personalProjects as projects } from "../../content/projects.ts";
---

<!doctype html>
<html>
  <Header title=`Personal Projects | ${NAME}` />
  <body>
    <div class="content">
      <Sidebar selectedItem="personal-projects" />
      <nav class="main">
        <div class="container">
          <div class="back-nav-container">
            <a href="/" class="back-nav-button w-inline-block"
              ><img
                src="/assets/back.svg"
                loading="lazy"
                alt=""
                class="back-nav-img"
              />
              <div>Back</div>
            </a>
          </div>
          <div class="content-container">
            <h1>Personal Projects</h1>
            <section class="items-container">
              <div class="resouce-items project-card">
                {
                  projects.map((project) => (
                    <a
                      href={`/personal-projects/${project.title.toLowerCase()}`}
                      style="text-decoration: none"
                    >
                      <Project
                        title={project.title}
                        subtitle={project.subtitle}
                        status={project.status}
                        desc={project.desc}
                        tech={project.tech}
                      />
                    </a>
                  ))
                }
              </div>
            </section>
          </div>
        </div>
      </nav>
    </div>

    <!--[if lte IE 9]>
<script src="//cdnjs.cloudflare.com/ajax/libs/placeholders/3.0.2/placeholders.min.js"></script><![endif]-->
  </body>
</html>
