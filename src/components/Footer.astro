---
import { Icon } from "astro-icon/components";

const socialLinks = [
  {
    icon: "carbon:logo-github",
    href: "https://github.com/7591yj",
    label: "GitHub",
  },
  {
    icon: "carbon:logo-linkedin",
    href: "https://www.linkedin.com/in/yeongjin-kim-58b2ab351",
    label: "LinkedIn",
  },
  {
    icon: "carbon:email",
    href: "mailto:yeongjin.kim@proton.me",
    label: "Email",
  },
];

const projectLinks = [
  {
    name: "modulino",
    href: "https://github.com/modulino-lab",
  },
  {
    name: "BizLenz",
    href: "https://github.com/BizLenz",
  },
];
---

<footer class="footer">
  <div class="footer-main">
    <div class="footer-left-inner container-main">
      <div class="footer-socials">
        {
          socialLinks.map(({ icon, href, label }) => (
            <a href={href} class="footer-icon-link" aria-label={label}>
              <Icon name={icon} />
            </a>
          ))
        }
      </div>
    </div>
    <div class="footer-right-inner container-main">
      {
        projectLinks.map(({ name, href }) => (
          <a href={href} class="hover-sweep-text text-2xl font-bold">
            {name.toUpperCase()}
          </a>
        ))
      }
    </div>
  </div>
  <p class="footer-copy text-center">
    &copy; {new Date().getFullYear()} 7591yj &middot; Built with Astro
  </p>
</footer>

<style>
  .footer {
    --folder-cut: 1vw;
    padding: var(--spacing-lg);
    padding-top: var(--folder-cut);
    margin-top: var(--spacing-4xl);
    position: relative;
    background: url("/images/splash-1.png") center / cover no-repeat;
    clip-path: polygon(
      0 0,
      33.33% 0,
      calc(33.33% + var(--folder-cut)) var(--folder-cut),
      100% var(--folder-cut),
      100% 100%,
      0 100%
    );
    --color-text-primary: #e8e8f0;
    --color-text-secondary: #a0a0b8;
    --color-text-muted: #6b6b80;
    --color-border: rgba(255, 255, 255, 0.08);
    color: var(--color-text-primary);
  }

  .footer::before {
    content: "";
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
    z-index: 0;
  }

  .footer::after {
    content: "";
    position: absolute;
    inset: 0;
    z-index: 1;
    background: var(--color-border);
    clip-path: polygon(
      0 0,
      33.33% 0,
      calc(33.33% + var(--folder-cut)) var(--folder-cut),
      100% var(--folder-cut),
      100% calc(var(--folder-cut) + 1px),
      calc(33.33% + var(--folder-cut)) calc(var(--folder-cut) + 1px),
      33.33% 1px,
      0 1px
    );
  }

  .footer > * {
    position: relative;
    z-index: 2;
  }

  .footer > p {
    padding-top: var(--spacing-4xl);
  }

  .footer-main {
    display: flex;
    justify-content: space-between;
    padding: var(--spacing-xl) 0;
    padding-bottom: var(--spacing-4xl);
  }

  .footer-left-inner {
    display: flex;
    flex-direction: column;
    align-items: start;
    gap: var(--spacing-xl);
  }

  .footer-right-inner {
    display: flex;
    flex-direction: column;
    align-items: end;
    gap: var(--spacing-sm);
  }

  .footer-right-inner > a {
    text-decoration: none;
  }

  .footer-socials {
    display: flex;
    flex-direction: column;
    justify-content: end;
    gap: var(--spacing-md);
  }

  .footer-icon-link {
    color: var(--color-text-secondary);
    transition: color var(--duration-fast) ease;
  }

  .footer-icon-link:hover {
    color: var(--color-accent);
  }

  .footer-icon-link [data-icon] {
    width: 1.25rem;
    height: 1.25rem;
  }

  .footer-copy {
    font-size: 0.75rem;
    color: var(--color-text-muted);
  }
</style>
