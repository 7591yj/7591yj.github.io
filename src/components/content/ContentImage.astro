---
interface Props {
  src: string;
  alt?: string;
  size?: "xs" | "sm" | "md" | "lg" | "xl";
}

const { src, alt = "", size = "xl" } = Astro.props;

const sizeMap: Record<string, string> = {
  xs: "320px",
  sm: "480px",
  md: "640px",
  lg: "800px",
  xl: "100%",
};
---

<div class={`content-image content-image--${size}`} style={`max-width: ${sizeMap[size]}`}>
  <img src={src} alt={alt} class="content-image__img" />
</div>

<style>
  .content-image {
    border: 1px solid var(--color-border);
    margin: 1.5rem auto;
    overflow: hidden;
    background: var(--color-bg-secondary);
  }

  .content-image__img {
    width: 100%;
    display: block;
    object-fit: contain;
  }
</style>
