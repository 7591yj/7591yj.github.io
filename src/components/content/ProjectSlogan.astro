---
interface Props {
  text: string;
}

const { text } = Astro.props;
---

<div class="slogan-strip" aria-label={text}>
  <div class="slogan-track">
    {
      [0, 1].map(() => (
        <span class="slogan-seg" aria-hidden="true">
          {[0, 1, 2, 3].map(() => (
            <>
              <span>{text}</span>
              <span class="slogan-dot">Â·</span>
            </>
          ))}
        </span>
      ))
    }
  </div>
</div>

<style>
  .slogan-strip {
    overflow: hidden;
    border-top: 1px solid var(--color-border);
    background: var(--color-bg-secondary);
    padding: 0.65rem 0;
  }

  .slogan-track {
    display: flex;
    width: max-content;
    animation: slogan-scroll 55s linear infinite;
  }

  .slogan-track:hover {
    animation-play-state: paused;
  }

  .slogan-seg {
    display: flex;
    align-items: center;
    font-family: "PlemolJP", monospace;
    font-size: var(--font-size-xl);
    font-style: italic;
    color: var(--color-text-primary);
    white-space: nowrap;
    letter-spacing: 0.04em;
  }

  .slogan-dot {
    margin: 0 1rem;
    color: var(--color-text-muted);
    font-style: normal;
  }

  @keyframes slogan-scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
</style>
