---
interface Props {
  date: string | Date;
}

const { date: rawDate } = Astro.props;
const date = typeof rawDate === "string" ? new Date(rawDate) : rawDate;
---

<time datetime={date.toISOString()}>
  {
    date.toLocaleDateString("en-us", {
      year: "numeric",
      month: "short",
      day: "numeric",
    })
  }
</time>
