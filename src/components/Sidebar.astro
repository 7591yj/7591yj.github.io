---
import { NAME, PROFILE_IMAGE } from "../consts.ts";
const { selectedItem } = Astro.props;
---

<aside
  data-animation="default"
  data-collapse="medium"
  data-duration="400"
  data-easing="ease"
  data-easing2="ease"
  role="banner"
  class="sidebar w-nav"
>
  <div class="nav-content">
    <a href="/" class="w-nav-brand" aria-label="home">
      <div class="niv-data">
        <img
          src={PROFILE_IMAGE}
          loading="eager"
          alt="Profile picture"
          class="niv-image"
        />
        <div>
          <div class="label-white">{NAME}</div>
          <div class="label-gray">Software Engineer</div>
        </div>
      </div>
    </a>

    <nav role="navigation" class="w-nav-menu">
      <a
        href="/"
        class={`nav-link-container  ${
          selectedItem === "home" ? "w--current" : ""
        }`}
      >
        <img
          src="/assets/home.svg"
          loading="eager"
          alt=""
          class="nav-link-image"
        />
        <div>Home</div>
      </a>
      <a
        href="/software-development"
        class={`nav-link-container ${
          selectedItem === "software-development" ? "w--current" : ""
        }`}
        aria-current={selectedItem === "software-development"
          ? "page"
          : undefined}
      >
        <img
          src="/assets/code.svg"
          loading="eager"
          alt=""
          class="nav-link-image"
        />
        <div>Software development</div>
      </a>
      <a
        href="/personal-projects"
        class={`nav-link-container  ${
          selectedItem === "personal-projects" ? "w--current" : ""
        }`}
      >
        <img
          src="/assets/dns.svg"
          loading="eager"
          alt=""
          class="nav-link-image"
        />
        <div>Personal projects</div>
      </a>
      <!-- TODO: undo comment after implementation-->
      <!--<a-->
      <!--  href="/blog"-->
      <!--  class={`nav-link-container  ${-->
      <!--    selectedItem === "blog" ? "w&#45;&#45;current" : ""-->
      <!--  }`}-->
      <!--&gt;-->
      <!--  <img-->
      <!--    src="/assets/favorite.svg"-->
      <!--    loading="eager"-->
      <!--    alt=""-->
      <!--    class="nav-link-image"-->
      <!--  />-->
      <!--  <div>Blog</div>-->
      <!--</a>-->
      <a
        href="/about"
        class={`nav-link-container  ${
          selectedItem === "about" ? "w--current" : ""
        }`}
      >
        <img
          src="/assets/me.svg"
          loading="eager"
          alt=""
          class="nav-link-image"
        />
        <div>About Me</div>
      </a>
    </nav>

    <div
      class="navbar-icon-button w-nav-button"
      style="-webkit-user-select: text;"
      aria-label="menu"
      role="button"
      tabindex="0"
    >
      <img src="/assets/menu.svg" loading="eager" alt="" class="navbar-icon" />
    </div>
  </div>

  <script>
    import { setupNav } from "../scripts/nav.js";

    let cleanup;
    document.addEventListener("astro:page-load", () => {
      if (cleanup) cleanup();
      cleanup = setupNav();
    });

    document.addEventListener("astro:before-swap", () => {
      if (cleanup) cleanup();
    });
  </script>
</aside>
