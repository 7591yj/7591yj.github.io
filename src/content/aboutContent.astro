---
import {
  EMAIL,
  NAME,
  LOCATION_NOW,
  LOCATION_FROM,
  PROFILE_IMAGE,
} from "../consts.ts";
---

<h2>Personal Details</h2>
<div class="about-top-container">
  <div>
    <img src={PROFILE_IMAGE} alt="Profile image" class="rounded-4xl" />
  </div>
  <div>
    <h3>{NAME}</h3>
    <p>
      Junior software developer with a passion for building scalable and
      maintainable applications.
    </p>
    <div>
      <div class="about-content-icons-container">
        <img src="/assets/cake.svg" alt="Born in" />
        <p>07.20.2002</p>
      </div>
      <div class="about-content-icons-container">
        <img src="/assets/at.svg" alt="Mail Me at" />
        <p><a href=`mailto:${EMAIL}`>{EMAIL}</a></p>
      </div>
      <div class="about-content-icons-container">
        <img src="/assets/map-pin-house.svg" alt="Where I am from" />
        <p>{LOCATION_FROM}</p>
      </div>
      <div class="about-content-icons-container">
        <img src="/assets/map-pin.svg" alt="Where am I" />
        <p>{LOCATION_NOW}</p>
      </div>
    </div>
  </div>
</div>

<div>
  <h3>Education</h3>
